      address _wallet,
      MintableToken _token,
      uint256 _cap,
      uint256 _openingTime,
      uint256 _closingTime
    )
    Crowdsale(_rate, _wallet, _token)
    CappedCrowdsale(_cap)
    TimedCrowdsale(_openingTime, _closingTime)
    FinalizableCrowdsale()
    MintedCrowdsale()
    public
    {
      token = _token;
      tokenCap = _cap;
      wallet = _wallet;
      icoPrivatesaleDate = _openingTime;
      icoEndDate = _closingTime;
    }

    function () external payable {
      require(isStopICO == false);
      require(validPurchase());

      buyTokens(msg.sender);
    }

    function buyTokens(address _beneficiary) public payable { 
      require(_beneficiary != 0x0);

      require(isStopICO == false);
      require(validPurchase());

      updateRate();

      uint256 weiAmount = msg.value;
      _preValidatePurchase(_beneficiary, weiAmount);

      // calculate token amount to be created
      uint256 tokens = _getTokenAmount(weiAmount);

      // update state
      weiRaised = weiRaised.add(weiAmount);
      tokenSold = tokenSold.add(tokens);

      _processPurchase(_beneficiary, tokens);
      emit TokenPurchase(
        msg.sender,
        _beneficiary,
        weiAmount,
        tokens
      );

      _updatePurchasingState(_beneficiary, weiAmount);

      _forwardFunds();
      _postValidatePurchase(_beneficiary, weiAmount);
    }

    function updateRate() internal constant {
        if (now <= icoPrivatesaleEndDate) {
            rate = 1250;
        } else if (now <= icoPresaleEndDate ) {
            rate = 1150;
        } else if (now <= icoEndDate) {
            rate = 1000;
        }
    }

    // Change the current rate
    function setCurrentRate(uint256 _rate) onlyOwner private {
      rate = _rate;
    }

    // @return true if the transaction can buy tokens
    function validPurchase() internal constant returns (bool) {      
      bool withinPrivateICO = icoPrivatesaleDate <= now && now <= icoPrivatesaleEndDate;
      bool withinPreICO = icoPresaleStartDate <= now && now <= icoPresaleEndDate;
      bool withinPublicICO = icoPublicsaleStartDate <= now && now <= icoEndDate;
      bool enoughPurchase = msg.value >= MINIMAL_PURCHASE;
      bool withinTokenCap = tokenSold.add(msg.value.mul(rate)) <= tokenCap;
      return (withinPrivateICO || withinPreICO || withinPublicICO) && enoughPurchase && withinTokenCap;
    }

    //Function to update an ICO parameter.
    //It requires: timestamp of start and end date, exchange rate (1 ETH = ? Tokens)
    //Owner need to make sure the contract has enough tokens for ICO. 
    //If not enough, then he needs to transfer some tokens into contract addresss from his wallet
    //If there are no tokens in smart contract address, then ICO will not work.
    function updateCrowdsaleDate(uint256 updPrivateEnd, uint256 updPresaleStart, uint256 updPresaleEnd, uint256 updPublicStart) onlyOwner public {      
        require(icoPrivatesaleDate < icoEndDate);
        icoPrivatesaleEndDate = updPrivateEnd;
        icoPresaleStartDate = updPresaleStart;
        icoPresaleEndDate = updPresaleEnd;
        icoPublicsaleStartDate = updPublicStart;
    }
        
    //Stops an ICO.
    //It will just set the ICO end date to zero and thus it will stop an ICO
    function stopICO() onlyOwner public{
      isStopICO = true;
    }

    //Stops an ICO.
    //It will just set the ICO end date to zero and thus it will stop an ICO
    function startICO() onlyOwner public{
      isStopICO = false;
    }
        
    //function to check wheter ICO is running or not. 
    //It will return current state of the crowdsale
    function icoStatus() public view returns(string){
        if(icoEndDate < now ){
            return "ICO is over";
        }else if(icoPrivatesaleDate <= now && icoPrivatesaleEndDate > now ){
            return "Private Sale is running";
        }else if(icoPrivatesaleEndDate < now && icoPresaleStartDate > now ){
            return "Private Sale is over";
        }else if(icoPresaleStartDate <= now && icoPresaleEndDate > now){
            return "Pre ICO is running";
        }else if(icoPresaleEndDate < now && icoPublicsaleStartDate > now ){
            return "Pre ICO is over";
        }else if(icoPublicsaleStartDate <= now && icoEndDate > now){
            return "Public ICO is running";
        }else{
            return "ICO is over";
        }
    }

    //Just in case, owner wants to transfer Ether from contract to owner address
    function manualWithdrawEther() onlyOwner public{
        uint256 amount=address(this).balance;
        owner.transfer(amount);
    }

    function finalization() internal {
      token.transferOwnership(msg.sender);
      super.finalization();
    }
}
