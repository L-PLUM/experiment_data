contract Faucet is Ownable {
    using SafeMath for uint256;

    address private _claimer;
    uint256 private _withdrawLimit;

    constructor (address claimer, uint256 withdrawLimit) public {
        _claimer = claimer;
        _withdrawLimit = withdrawLimit;
    }

    function updateWithdrawLimit(uint256 withdrawLimit) public onlyOwner {
        _withdrawLimit = withdrawLimit;
    }

    function withdraw(uint256 value) public {
        require(msg.sender == _claimer);
        require(value <= _withdrawLimit);

        msg.sender.transfer(value);
    }

    function kill() public onlyOwner {
        selfdestruct(msg.sender);
    }
}
