contract CertificateRegistry is Ownable {
    
    event VerifiedCertificate(
       bytes32 hash,
       bytes32 name,
       bytes32 verifier,
       uint256 date
    );
    
    mapping(address => bytes32) verifiers;
    
    function setName(bytes32 name) public onlyOwner  {
       verifiers[msg.sender] = name;
   }
    
    function validateCert(bytes32 docHash, bytes32 docName) public {
        require(verifiers[msg.sender] > 0, "This account is not an authorized validator");
        emit VerifiedCertificate(docHash, docName, verifiers[msg.sender], now);
   }
   
